# -------------------------------
# Azure Storage connection string for File Share (for cleanup and dry-run)
AZURE_FILES_CONN_STRING=DefaultEndpointsProtocol=https;AccountName=<your_account>;AccountKey=<your_key>;EndpointSuffix=core.windows.net

# -------------------------------
# Azure Storage connection string for Table Storage (used for progress tracking)
AZURE_TABLE_CONN_STRING=DefaultEndpointsProtocol=https;AccountName=<your_table_account>;AccountKey=<your_table_key>;EndpointSuffix=core.windows.net

# Table names for tracking cleanup/dryrun jobs
CLEANUP_TABLE_NAME=CleanupJobTracking
DRYRUN_TABLE_NAME=DryRunJobTracking

# -------------------------------
# Number of days to retain data (e.g. delete items older than X days)
RETENTION_DAYS=30

# -------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO